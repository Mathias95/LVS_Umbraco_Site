@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Frontpage>
@using ContentModels = Umbraco.Web.PublishedContentModels;

<!-- Hero  -->
<section class="banner">
    <div class="banner-container">
        <div class="banner-text-wrapper">
            <h1>@Model.Content.HeroHeader</h1>
            <p>@Model.Content.HeroDescription</p>
            <a class="cta-button" href="@Model.Content.HeroLink">
            @Model.Content.HeroCaption <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
</section>